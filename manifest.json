{
  "manifest_version": 3,
  "name": "Local Network Chat",
  "version": "1.0",
  "description": "Encrypted chat over local network using WebSocket",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Local Network Chat"
  }
}
